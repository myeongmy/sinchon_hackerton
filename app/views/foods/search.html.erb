<style>
  #container{
    width: 100%;
    height: 100%;
    background-color: black;
    
  }
  #recipe{
    width: 80%;
    height: 80%;
    margin: auto;
    background-color: white;
    position: absolute;
    top: 0; bottom: 0; left: 0; right: 0;
    
  }
  #content{
    width: 70%;
    z-index :0;
    
  }
  img{
    width: 50%;
  }
  h1{
    display: inline-block;
    width: 50%;
    padding-left: 300px;
  }
