<div id="container">
  <div id="recipe">
    <% @foods.each do |food| %>
    
        <h1><%= food.fname %></h1>
        
        <div class="img">
        <img src = "<%=food.image.url%>" style="width: 300px; height: 250px;"> 
        </div>
        
        <br> 
        <p>레시피보기</p>
        <div id="content">
        <%= Content.find(food.id).content %><br>
        </div>
        
      



      <form action="/foods/<%= food.id%>/users/<%= current_user.id%>" method="post">
        <input type="submit" value="My page로 레시피저장">
      </form>
      <br>
      <hr>

    <% end %>
