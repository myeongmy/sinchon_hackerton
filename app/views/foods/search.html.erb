<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Material1</th>
      <th>Material2</th>
      <th colspan="3"></th>
      <%#= @info2.text %>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.fname %></td>
        <td><%= food.material1 %></td>
        <td><%= food.material2 %></td>
        <td><img src = "<%=food.image.url%>" style="100px"></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
      <form action="/foods/<%= food.id%>/users/<%= current_user.id%>" method="post">
        <input type="submit" value="저장">
      </form>

    <% end %>
  </tbody>
</table>
